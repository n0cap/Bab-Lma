# ──────────────────────────────────────────────
# Babloo API — Environment Variables
# Copy to .env and fill in production values.
# ──────────────────────────────────────────────

# Database (required — no default)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/babloo

# Auth / JWT
JWT_SECRET=change-me-in-production-min-32-chars
JWT_ACCESS_TTL=15m
JWT_REFRESH_TTL=30d
BCRYPT_ROUNDS=12

# OTP
OTP_TTL_MINUTES=5
OTP_MAX_ATTEMPTS=5
OTP_RATE_LIMIT_PER_15MIN=3

# SMS provider: "mock" (dev) or "twilio" (prod)
SMS_PROVIDER=mock
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Server
PORT=3000
NODE_ENV=development
CORS_ORIGINS=http://localhost:8081

# Railway (auto-injected in Railway deployments)
# RAILWAY_ENVIRONMENT=
